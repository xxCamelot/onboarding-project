@model RoomDataModel

@{
    ViewData["Title"] = "Add new Room";
}


@using (Html.BeginForm("AddRoomSurveyMethod", "Home", FormMethod.Post))
{
    <form>
        <div>
            <label for="address">Description:</label>
            @Html.TextBoxFor(room => room.Description, new { @type = "text", @size = "40", @placeholder = "Master Bedroom", @required = "true" })
        </div>
        <div>
            <label for="description">Number of beds:</label>
            @Html.TextBoxFor(room => room.Beds, new { @type = "text", @size = "40", @placeholder = "4", @required = "true" })
        </div>
        <div>
            <label for="surface">Surface Area (m2):</label>
            @Html.TextBoxFor(room => room.Surface, new { @type = "text", @size = "40", @placeholder = "107.4", @required = "true" })
        </div>
        @Html.HiddenFor(room => room.EnglishDescription)
        @Html.HiddenFor(room => room.ItalianDescription)
        @Html.HiddenFor(room => room.PolishDescription)
        @Html.HiddenFor(room => room.PropertyId)
        <div>
            <input type="submit" value="Submit" />
        </div>
    </form>
}





