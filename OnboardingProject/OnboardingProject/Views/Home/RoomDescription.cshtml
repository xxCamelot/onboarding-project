@model RoomModel

@{
    ViewData["Title"] = "Room Description";
}

<h1>@ViewData["Title"]</h1>

<p>Here is all available info on the selected room. Select one to edit it.</p>

<div>
    <b>Description: </b>
    @Html.ActionLink(@Model.description, "UpdateRoom", "Home", new { roomID = Model.roomID, index = 1 })
    <hr />
</div>
<div>
    <b>Beds: </b>
    @Html.ActionLink(@Model.beds.ToString(), "UpdateRoom", "Home", new { roomID = Model.roomID, index = 2 })
    <hr />
</div>
<div>
    <b>Surface (m2): </b>
    @Html.ActionLink(@Model.surface.ToString(), "UpdateRoom", "Home", new { roomID = Model.roomID, index = 3 })
    <hr />
</div>
