@model PropertyDataModel

@{
    ViewData["Title"] = "Add new Property";
}


@using (Html.BeginForm("AddPropertyMethod", "Home", FormMethod.Post))
{
    <form>
        <div>
            <label for="address">Address:</label>
            @Html.TextBoxFor(property => property.Address, new { @type = "text", @size = "40", @placeholder = "99 Strawberry Lane", @required = "true" })
        </div>
        <div>
            <label for="description">Description:</label>
            @Html.TextBoxFor(property => property.Description, new { @type = "text", @size = "40", @placeholder = "Penthouse with a view", @required = "true" })
        </div>
        <div>
            <label for="surface">Surface Area (m2):</label>
            @Html.TextBoxFor(property => property.Surface, new { @type = "text", @size = "40", @placeholder = "107.4", @required = "true" })
        </div>
        <div>
            <label for="services">Services:</label>
            @Html.TextBoxFor(property => property.Services, new { @type = "text", @size = "40", @placeholder = "Wi-Fi, Laundry, Pool", @required = "true" })
        </div>
        @Html.HiddenFor(property => property.EnglishDescription)
        @Html.HiddenFor(property => property.ItalianDescription)
        @Html.HiddenFor(property => property.PolishDescription)
        <div>
            <input type="submit" value="Submit" />
        </div>
    </form>
}





